<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Title</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Dateofbirth</th>
      <th>Martialstatus</th>
      <th>Phonenumber</th>
      <th>Employmentstatus</th>
      <th>Address</th>
      <th>City</th>
      <th>Country</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= image_tag profile.avatar.url(:thumb) %></td>
        <td><%= profile.title %></td>
        <td><%= profile.firstname %></td>
        <td><%= profile.lastname %></td>
        <td><%= profile.dateofbirth %></td>
        <td><%= profile.martialstatus %></td>
        <td><%= profile.phonenumber %></td>
        <td><%= profile.employmentstatus %></td>
        <td><%= profile.address %></td>
        <td><%= profile.city %></td>
        <td><%= profile.country %></td>
        <td><%= profile.user_id %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

