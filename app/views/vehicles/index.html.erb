
<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>Listing Vehicles</h1>
    <h1>Your Favorite Cars Posts</h1>
    <p>This is some note to see if bootstrap works</p>
    <p><%= link_to "Sign Up to Post A Comment", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %>

<div class="row">
  <% @vehicles.each do |vehicle| %>
    <div class="col-sm-6, col-md-3">
      <div class="thumbnail">
      
      </div>
    </div>
    <% end %>
</div>


<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Enginesize</th>
      <th>Cupiccapacity</th>
      <th>Price</th>
      <th>Bodytype</th>
      <th>Fueltype</th>
      <th>Milleage</th>
      <th>Transmission</th>
      <th>Taxdue</th>
      <th>Nctdue</th>
      <th>Platenumber</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= image_tag vehicle.image.url(:medium) %></td>
        <td><%= vehicle.description %></td>
        <td><%= vehicle.make %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.enginesize %></td>
        <td><%= vehicle.cupiccapacity %></td>
        <td><%= vehicle.price %></td>
        <td><%= vehicle.bodytype %></td>
        <td><%= vehicle.fueltype %></td>
        <td><%= vehicle.milleage %></td>
        <td><%= vehicle.transmission %></td>
        <td><%= vehicle.taxdue %></td>
        <td><%= vehicle.nctdue %></td>
        <td><%= vehicle.platenumber %></td>
        <td><%= vehicle.user.email %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vehicle', new_vehicle_path %>
