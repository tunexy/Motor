<p>
  <h1>Advertise Your Vehicle</h1>
  <hr/>
</p>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    
<%= form_for @vehicle, html: { multipart: true } do |f| %>
  <% if @vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

      <ul>
      <% @vehicle.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :make %><br>
    <%= f.text_field :make %>
  </div>
  <div class="field">
    <%= f.label :model %><br>
    <%= f.text_field :model %>
  </div>
  <div class="field">
    <%= f.label :year %><br>
    <%= f.date_select :year, :start_year => 1970, :end_year => Date.current.year, :discard_month => true, :discard_day => true, :include_blank => true%>
  </div>
  <div class="field">
    <%= f.label :enginesize %><br>
    <%= f.text_field :enginesize %>
  </div>
  <div class="field">
    <%= f.label :cupiccapacity %><br>
    <%= f.number_field :cupiccapacity %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :bodytype %><br>
    <%= f.text_field :bodytype %>
  </div>
  <div class="field">
    <%= f.label :fueltype %><br>
    <%= f.text_field :fueltype %>
  </div>
  <div class="field">
    <%= f.label :milleage %><br>
    <%= f.number_field :milleage %>
  </div>
  <div class="field">
    <%= f.label :transmission %><br>
    <%= f.text_field :transmission %>
  </div>
  <div class="field">
    <%= f.label :taxdue %><br>
    <%= f.date_select :taxdue, :start_year => 2013, :end_year => 2020, :discard_day => true, :include_blank => true%>
  </div>
  <div class="field">
    <%= f.label :nctdue %><br>
    <%= f.date_select :nctdue, :start_year => 2012, :end_year => 2018, :discard_day => true, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :platenumber %><br>
    <%= f.text_field :platenumber %>
  </div>
  
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: 5 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
  </div>
</div>
