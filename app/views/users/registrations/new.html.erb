<h2>Register</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="form-group">
    <%= f.label :avatar, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
        <%= f.file_field :avatar %>
      </div>
  </div>
  
  <div class="form-group">
    <%= f.label :username, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.text_field :username, class: "form-control",autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div> 
  
  <div class="form-group"><br />
    <%= f.label :firstname, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :firstname, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :lastname, class: 'col-sm-2 control-label'   %>
    <div class="col-sm-6">
      <%= f.text_field :lastname, autofocus: true, class: 'form-control'  %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :is_female, "Gender", class: 'col-sm-2 control-label'  %>
    <div class="col-sm-6">
      <%= f.check_box :is_female, {}, true %> <%= f.label :is_female, "Female" %>
      <%= f.check_box :is_female, {}, false %> <%= f.label :is_female, "Male" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :martialstatus, class: 'col-sm-2 control-label'   %>
    <div class="col-sm-6">
      <%= f.text_field :martialstatus, autofocus: true, class: 'form-control'  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :phonenumber, class: 'col-sm-2 control-label'   %>
    <div class="col-sm-6">
      <%= f.text_field :phonenumber, autofocus: true, class: 'form-control'  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :employmentstatus, class: 'col-sm-2 control-label'   %>
    <div class="col-sm-6">
      <%= f.text_field :employmentstatus, autofocus: true, class: 'form-control'  %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :dateofbirth, class: 'col-sm-2 control-label'%>
    <div class="col-sm-2">
      <%= f.date_select :dateofbirth, :start_year => 1800, :end_year => 2000, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :address, class: 'col-sm-2 control-label'   %>
    <div class="col-sm-6">
      <%= f.text_area :address, rows: 6, autofocus: true, class: 'form-control'  %>
    </div>
  </div>
    
  <div class="form-group">
    <%= f.label :city, class: 'col-sm-2 control-label'   %>    
    <div class="col-sm-6">
      <%= f.text_field :city, autofocus: true, class: 'form-control'  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password , class: "col-sm-2 control-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <div class="col-sm-6">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form_group">
    <%= f.label :password_confirmation, class: "col-sm-2 control-label" %><br />
    <div class="col-sm-6">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %><br />
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= render "users/shared/links" %>
    </div>
  </div>
  
<% end %>